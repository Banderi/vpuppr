class_name BasicPhysicsAttachment
extends PhysicalBone

var counter: int = 0
var max_count: int = 120

###############################################################################
# Builtin functions                                                           #
###############################################################################

func _physics_process(_delta: float) -> void:
	if is_simulating_physics():
		if counter > max_count:
			self.apply_central_impulse(Vector3(0, rand_range(-0.1, 0.1), 0))
			counter = 0
		else:
			counter += 1

